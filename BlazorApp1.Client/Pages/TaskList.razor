@page "/Tasklist"
@rendermode InteractiveWebAssembly
<table class="table">
    <thead>
        <tr>
            <th>Task review</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in tasks)
        {
            <tr>
                <td>@task</td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <input @bind="newTask" @bind:event="oninput" placeholder="Введите новую задачу" class="form-control mb-2" />
    <button class="btn btn-primary" @onclick="AddtoList">Добавить задачу</button>
</div>


@code {
    private List<string> tasks = new List<string>();
    private string? newTask = null;
    private void AddtoList()
    {
        if (!string.IsNullOrWhiteSpace(newTask))
        {
            tasks.Add(newTask);
            newTask = null;
            StateHasChanged();
        }
    }
}
